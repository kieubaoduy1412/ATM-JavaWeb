//loc
function sendFunction() {
	var receiverID = $('#txtReceiver').val();
	var amount = $('#txtAmonut').val();
	if(receiverID!="" && amount!=""){
		var numberRegex = /^[+-]?\d+(\.\d+)?([eE][+-]?\d+)?$/;
		if (numberRegex.test(amount)) {
			$.post("sendMoney", {
				receiverId : receiverID,
				amount : amount
			}, function(data) {
				$('body').html(data);
			});
		}
	}else{
		$("#errmsg").html("Fill full field!!!").show().fadeOut(1500);
		return false;
	}	
}

// loc
function clearFunction() {
	$('#txtAmonut').val('');
	$('#txtReceiver').val('');
}

$('#clear').click(function() {
	$('#receiver').val('');
	$('#addAmount').val('');
});

$('#addMoney').click(function() {
	var receiverID = $('#receiver').val();
	var amount = $('#addAmount').val();

	if (!receiverID) {
		$('.notify').text('Receiver is required!');
		return false;
	}

	if (!amount) {
		$('.notify').text('Amount is required!');
		return false;
	}

	$.ajax({
		url : 'addMoney',
		type : 'POST',
		data : {
			accountId : receiverID,
			amount : amount
		}
	}).success(function(data) {
		$('body').empty();
		$('body').html(data);
	});
})

$(document).ready(function() {

	// loc
	// Only input number, remove if character typing is not number
	$("#txtAmonut").keypress(function(e) {
		// if the letter is not digit then display error and don't type anything
		if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
			// display error message
			$("#errmsg").html("Number Only").show().fadeOut(1500);
			return false;
		}
		var amount = $('#txtAmonut').val();
		if(amount.length >= 9){
			$("#errmsg").html("Only send less 1 billion").show().fadeOut(1500);
			return false;
		}
	});

	// Only input number, remove if character typing is not number
	$("#addAmount").keypress(function(e) {
		// if the letter is not digit then display error and don't type anything
		if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
			// display error message
			$("#errmsg").html("Number Only").show().fadeOut("slow");
			return false;
		}
	});
});

function withDrawn() {
	var amount = $('input[name=amount]').val();
	if (amount > 0) {
		$.ajax({
			type : 'POST',
			url : 'getMoney',
			data : {
				amount : amount
			},
		}).success(function(data) {
			$('body').html(data);
		});
	} else {
		alert("Xin hay nhap so tien")
	}
}
