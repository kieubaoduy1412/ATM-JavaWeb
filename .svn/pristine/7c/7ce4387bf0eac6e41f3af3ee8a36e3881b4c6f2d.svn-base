.contentSendMoney {
	height: 400px;
	width: 850px;
	position: absolute;
	left: 50%;
	transform: translate(-50%, 0%);
}

.bankTitle {
	margin-top: 10px;
	text-align: center;
	font-size: larger;
	color: RED;
}

.copyright {
	margin-top: 9%;
	text-align: center;
	font-size: large;
}

.message {
	text-align: center;
	font-size: 150%;
	width: 80%;
	margin: auto;
	style-display: none;
}

.receiver, .amount {
	height: 30px;
}

.amount {
	margin-top: 15px;
}

.lblReceiver, .lblAmount {
	float: left;
	margin-left: 15%;
	font-size: 180%;
}

.txtReceiver {
	margin-top: 5%;
}

.txtAmonut, .txtReceiver {
	width: 50%;
	margin-left: 30%;
}

#txtAmonut, #txtReceiver {
	height: 25px;
	width: 100%;
}

button {
	width: calc(80%/ 3);
	height: 30px;
	float: left;
	margin-left: calc(20%/ 4);
}

.listButton {
	margin-top: 30px;
	width: 50%;
	margin-left: 30%;
}